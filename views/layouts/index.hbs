    <div class="mx-5 bg-light p-5">
        <h1 class="mb-3">Chat</h1>
        <h5 id="compresion"></h5>
        <form id="chat">
            <div class="mb-3">
                <label for="correo" class="form-label">Correo</label>
                <input type="email" class="form-control" name="correo" id="correo" placeholder="correo@ejemplo.com" required>
            </div>
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre</label>
                <input type="text" class="form-control" name="nombre" id="nombre" placeholder="Digite su nombre" required>
            </div>
            <div class="mb-3">
                <label for="apellido" class="form-label">Apellido</label>
                <input type="text" class="form-control" name="apellido" id="apellido" placeholder="Digite su Apellido" required>
            </div>
            <div class="mb-3">
                <label for="edad" class="form-label">Edad</label>
                <input type="number" class="form-control" name="edad" id="edad" placeholder="Digite su Edad" required>
            </div>
            <div class="mb-3">
                <label for="alias" class="form-label">Alias</label>
                <input type="text" class="form-control" name="alias" id="alias" placeholder="Digite su Alias" required>
            </div>
            <div class="mb-3">
                <label for="avatar" class="form-label">Avatar</label>
                <input type="text" class="form-control" name="avatar" id="avatar" placeholder="Digite su URL Avatar" required>
            </div>
            <div class="mb-3"  id="mensajes">
            </div>
            <div class="mb-3">
                <input type="text" class="form-control w-50 d-inline" name="thumbnail" id="mensaje" placeholder="Digite su mensaje" required>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
        </form>
    </div>
